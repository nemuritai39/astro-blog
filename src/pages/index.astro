---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

// 1. 暴力扫描：直接读取物理路径下的所有 .md 文件
// 这一步是 Vite 提供的原生能力，比 Astro 的 getCollection 稳得多
const mdFiles = import.meta.glob('../../content/with-you/*.md', { eager: true });

const moments = Object.values(mdFiles).map((file: any) => {
  return {
    ...file.frontmatter,
    // 自动补齐路径，防止图片裂开
    cover: file.frontmatter.cover.startsWith('/') ? file.frontmatter.cover : `/${file.frontmatter.cover}`
  };
}).sort((a, b) => new Date(b.pubDate).valueOf() - new Date(a.pubDate).valueOf());

const PASSWORD = "0309"; 
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`With You - ${SITE_TITLE}`} />
		<style>
			:root { --gold: #d6b25e; --bg: #050505; }
			body { background: var(--bg); color: #fff; margin: 0; font-family: 'EB Garamond', serif; }
			#gate { position: fixed; inset: 0; background: var(--bg); z-index: 10001; display: flex; flex-direction: column; align-items: center; justify-content: center; transition: 0.8s ease; }
			#gate.hidden { opacity: 0; visibility: hidden; pointer-events: none; }
			#pw-box { background: transparent; border: none; border-bottom: 1px solid var(--gold); color: #fff; text-align: center; font-size: 1.8rem; width: 260px; outline: none; }
			main { max-width: 800px; margin: 0 auto; padding: 150px 20px; }
			.card { margin-bottom: 120px; text-align: center; }
			.card img { width: 100%; height: auto; max-height: 75vh; object-fit: contain; margin: 2rem 0; box-shadow: 0 30px 60px rgba(0,0,0,0.6); border: 1px solid rgba(214,178,94,0.1); }
			.date { color: var(--gold); font-family: 'Cinzel'; letter-spacing: 0.2em; }
			.desc { opacity: 0.5; font-style: italic; margin-top: 1rem; }
		</style>
	</head>
	<body>
		<div id="gate">
			<p style="color: var(--gold); letter-spacing: 0.5em; font-family: 'Cinzel'; margin-bottom: 2rem;">IDENTITY VERIFICATION</p>
			<input type="password" id="pw-box" autofocus />
		</div>

		<Header />
		<main>
			<div style="text-align: center; font-size: 10px; opacity: 0.3; margin-bottom: 20px;">
				RAW SCAN: {moments.length} FILES FOUND
			</div>

			{moments.length > 0 ? (
				moments.map((m) => (
					<div class="card">
						<div class="date">{new Date(m.pubDate).toDateString()}</div>
						<img src={m.cover} alt={m.title} />
						<h2 style="font-family: 'Cinzel';">{m.title}</h2>
						<p class="desc">{m.description}</p>
					</div>
				))
			) : (
				<div style="text-align: center; padding: 100px; opacity: 0.5;">
					扫描路径：src/content/with-you/ <br/>
					状态：未发现有效 Markdown 文件
				</div>
			)}
		</main>
		<Footer />

		<script define:vars={{ PASSWORD }}>
			document.getElementById('pw-box').addEventListener('input', (e) => {
				if (e.target.value === PASSWORD) {
					document.getElementById('gate').classList.add('hidden');
				}
			});
		</script>
	</body>
</html>
