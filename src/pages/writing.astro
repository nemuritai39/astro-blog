---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

// 定义分类元数据
const categories = [
	{ id: 'essays', title: '随笔', latin: 'ESSAYS', desc: '在墨痕的间隙，捕捉灵魂碎裂的低语。', color: 'var(--ivory)' },
	{ id: 'poems', title: '诗歌', latin: 'POEMS', desc: '捕捉碎裂的韵律，在短句的尽头等待回声。', color: 'var(--silver)' },
	{ id: 'thinking', title: '思考', latin: 'THINKING', desc: '于无声处听惊雷，在自省中重构世界。', color: 'var(--accent-gold)' },
	{ id: 'goals', title: '目标', latin: 'GOALS', desc: '尚未达成的契约，终将成为现实的刻度。', color: '#b39ddb' },
];

// 抓取每个分类下最新的一篇文章
const getLatestPost = async (collectionName) => {
	const posts = await getCollection(collectionName);
	return posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())[0];
};

// 预处理所有分类的最新文章
const categoriesWithLatest = await Promise.all(
	categories.map(async (cat) => {
		const latestPost = await getLatestPost(cat.id);
		return { ...cat, latestPost };
	})
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Writing - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			main { max-width: 1000px; margin: 0 auto; padding: 100px 20px; }
			.page-header { text-align: center; margin-bottom: 100px; }
			.page-header h1 { font-family: 'Cinzel', serif; font-size: 3rem; letter-spacing: 0.4em; color: var(--ivory); }
			
			.archive-grid { display: grid; grid-template-columns: 1fr; gap: 60px; }

			.category-row {
				display: flex;
				align-items: flex-start;
				text-decoration: none;
				padding-bottom: 40px;
				border-bottom: 1px solid rgba(255, 255, 255, 0.03);
				transition: all 0.6s ease;
			}

			.category-row:hover { border-bottom-color: rgba(214, 178, 94, 0.2); transform: translateX(10px); }

			.cat-id {
				font-family: 'Cinzel', serif;
				font-size: 0.8rem;
				color: var(--accent-gold);
				width: 120px;
				flex-shrink: 0;
				padding-top: 12px;
				opacity: 0.6;
			}

			.cat-content { flex-grow: 1; }
			.cat-content h2 { font-family: 'Cinzel', serif; font-size: 2rem; margin: 0 0 10px 0; transition: 0.4s; }
			.cat-content p { font-family: 'Cormorant Garamond', serif; font-style: italic; color: rgba(255, 255, 255, 0.3); font-size: 1.1rem; margin: 0; }
			
			/* 最新文章展示区 */
			.latest-post {
				margin-top: 15px;
				font-family: 'EB Garamond', serif;
				font-size: 0.9rem;
				color: var(--accent-gold);
				opacity: 0.5;
				display: flex;
				align-items: center;
				transition: 0.4s;
			}
			.latest-post::before {
				content: 'RECENT —';
				margin-right: 10px;
				font-size: 0.7rem;
				letter-spacing: 0.1em;
			}

			.category-row:hover .latest-post { opacity: 0.9; transform: translateX(5px); }

			@media (max-width: 768px) {
				.category-row { flex-direction: column; }
				.cat-id { margin-bottom: 10px; }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="page-header">
				<h1>THE ARCHIVES</h1>
			</section>

			<div class="archive-grid">
				{categoriesWithLatest.map((cat) => (
					<a href={`/writing/${cat.id}`} class="category-row">
						<span class="cat-id">{cat.latin}</span>
						<div class="cat-content">
							<h2 style={`color: ${cat.color}`}>{cat.title}</h2>
							<p>{cat.desc}</p>
							
							{cat.latestPost && (
								<div class="latest-post">
									{cat.latestPost.data.title}
								</div>
							)}
						</div>
					</a>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>
