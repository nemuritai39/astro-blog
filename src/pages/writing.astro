---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const categories = [
	{ id: 'essays', title: '随笔', latin: 'ESSAYS', desc: '记录日常、片段与叙述。', color: 'var(--ivory)' },
	{ id: 'poems', title: '诗歌', latin: 'POEMS', desc: '短句、节奏与情绪。', color: 'var(--silver)' },
	{ id: 'thinking', title: '思考', latin: 'THINKING', desc: '观念、推演与自问自答。', color: 'var(--accent-gold)' },
	{ id: 'goals', title: '目标', latin: 'GOALS', desc: '长期/短期，拆解与回顾。', color: '#b39ddb' },
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Writing - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			main {
				max-width: 1000px;
				margin: 0 auto;
				padding: 80px 20px;
			}
			.page-header { text-align: center; margin-bottom: 80px; }
			.page-header h1 { font-family: 'Cinzel', serif; font-size: 3rem; letter-spacing: 0.3em; color: var(--ivory); }
			
			.archive-container { display: grid; grid-template-columns: repeat(2, 1fr); gap: 40px; }
			@media (max-width: 768px) { .archive-container { grid-template-columns: 1fr; } }

			.archive-item {
				position: relative; padding: 40px; text-decoration: none;
				border-left: 1px solid rgba(255, 255, 255, 0.05);
				background: linear-gradient(to right, rgba(255,255,255,0.02), transparent);
				transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
			}
			.archive-item::before {
				content: ''; position: absolute; bottom: 0; left: 0; width: 0%; height: 1px;
				background: var(--accent-gold); transition: width 0.6s ease;
			}
			.archive-item:hover { transform: translateX(10px); border-left-color: var(--accent-gold); background: rgba(255,255,255,0.05); }
			.archive-item:hover::before { width: 100%; }

			.latin-tag { font-family: 'Cinzel', serif; font-size: 0.8rem; letter-spacing: 0.4em; color: var(--accent-gold); opacity: 0.6; display: block; margin-bottom: 10px; }
			.archive-item h2 { font-family: 'Cinzel', serif; font-size: 1.8rem; margin: 10px 0; color: #fff; }
			.archive-item p { font-family: 'Cormorant Garamond', serif; color: rgba(255, 255, 255, 0.4); font-size: 1.1rem; }
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="page-header">
				<h1>WRITING</h1>
			</section>
			<div class="archive-container">
				{categories.map((cat) => (
					<a href={`/writing/${cat.id}`} class="archive-item">
						<span class="latin-tag">{cat.latin}</span>
						<h2>{cat.title}</h2>
						<p>{cat.desc}</p>
					</a>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>
