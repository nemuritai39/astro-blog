---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

// 1. 暴力抓取：先不排序，看看能不能抓到原始数组
let moments = [];
let debugError = "";

try {
    moments = await getCollection('with-you');
    if (moments) {
        moments.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
    }
} catch (e) {
    debugError = e.message;
}

const PASSWORD = "ghyzhy060309060126"; 
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`With You - ${SITE_TITLE}`} />
		<style>
			:root { --gold: #d6b25e; --bg: #050505; }
			html, body { background: var(--bg) !important; color: #fff; margin: 0; }
			#gate { position: fixed; inset: 0; background: var(--bg); z-index: 10001; display: flex; flex-direction: column; align-items: center; justify-content: center; }
			#gate.hidden { display: none; }
			#pw-box { background: transparent; border: none; border-bottom: 1px solid var(--gold); color: #fff; text-align: center; font-size: 1.8rem; width: 240px; outline: none; }
			main { max-width: 800px; margin: 0 auto; padding: 160px 24px; }
			.debug-info { background: #331111; color: #ff5555; padding: 20px; border: 1px solid red; margin-bottom: 20px; font-family: monospace; }
		</style>
	</head>
	<body>
		<div id="gate">
			<p style="color:var(--gold); letter-spacing:0.5em;">PASSCODE</p>
			<input type="password" id="pw-box" autofocus />
		</div>

		<Header />
		<main id="main-content">
			{debugError && <div class="debug-info">报错信息: {debugError}</div>}
			
			<div style="color: var(--gold); margin-bottom: 20px;">
				调试状态：找到文件数量 = {moments.length}
			</div>

			{moments.length > 0 ? (
				moments.map((m) => (
					<div style="margin-bottom: 100px; text-align: center;">
						<div style="color:var(--gold)">{m.data.pubDate.toDateString()}</div>
						<img src={m.data.cover} style="width: 100%; max-height: 70vh; object-fit: contain;" />
						<h2>{m.data.title}</h2>
						<p>{m.data.description}</p>
					</div>
				))
			) : (
				<div style="opacity: 0.5;">依然没找到数据，请确认 src/content/with-you/ 目录下有 .md 文件</div>
			)}
		</main>
		<Footer />

		<script define:vars={{ PASSWORD }}>
			const gate = document.getElementById('gate');
			const input = document.getElementById('pw-box');
			input.addEventListener('input', (e) => {
				if (e.target.value === PASSWORD) {
					gate.classList.add('hidden');
				}
			});
		</script>
	</body>
</html>
