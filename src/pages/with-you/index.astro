---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

// 搬家后 getCollection 已经能用了
const posts = await getCollection('with-you');
const sortedPosts = posts.sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const PASSWORD = "0309"; 
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`With You - ${SITE_TITLE}`} />
		<style>
			:root { --gold: #d6b25e; --bg: #050505; }
			html, body { background: var(--bg) !important; color: #fff; margin: 0; }
			#gate { position: fixed; inset: 0; background: var(--bg); z-index: 10001; display: flex; flex-direction: column; align-items: center; justify-content: center; }
			#gate.hidden { display: none; }
			#pw-box { background: transparent; border: none; border-bottom: 1px solid var(--gold); color: #fff; text-align: center; font-size: 2rem; width: 200px; outline: none; }
			main { max-width: 800px; margin: 0 auto; padding: 150px 24px; }
			.memory-item { margin-bottom: 120px; text-align: center; }
			.memory-item img { width: 100%; max-height: 75vh; object-fit: contain; margin: 2rem 0; box-shadow: 0 30px 60px rgba(0,0,0,0.5); }
			.date { color: var(--gold); font-family: 'Cinzel', serif; letter-spacing: 0.2em; }
		</style>
	</head>
	<body>
		<div id="gate">
			<p style="color: var(--gold); letter-spacing: 0.5em; font-family: 'Cinzel'; margin-bottom: 2rem;">PASSCODE</p>
			<input type="password" id="pw-box" autofocus />
		</div>

		<Header />
		<main>
			{sortedPosts.map((post) => (
				<div class="memory-item">
					<div class="date">{post.data.pubDate.toDateString()}</div>
					<img src={post.data.cover} alt={post.data.title} />
					<h2 style="font-family: 'Cinzel';">{post.data.title}</h2>
					{post.data.description && <p style="opacity:0.5">{post.data.description}</p>}
				</div>
			))}
		</main>
		<Footer />

		<script define:vars={{ PASSWORD }}>
			const gate = document.getElementById('gate');
			const input = document.getElementById('pw-box');
			input.addEventListener('input', (e) => {
				if (e.target.value === PASSWORD) {
					gate.classList.add('hidden');
				}
			});
		</script>
	</body>
</html>
