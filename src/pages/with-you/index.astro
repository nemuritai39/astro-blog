---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

// --- 手动定义数据，绕过 getCollection 的坑 ---
const memories = [
  {
    title: "waimai",
    date: "2026-02-12",
    cover: "/with-you/chiwaimai.png",
    description: "food"
  },
  {
    title: "zaoxing",
    date: "2026-02-10",
    cover: "/with-you/zaoxing.png",
    description: "night view"
  }
  // 如果还有别的，按这个格式手动加在这里
];

const PASSWORD = "0309"; 
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`With You - ${SITE_TITLE}`} />
		<style>
			:root { --gold: #d6b25e; --bg: #050505; }
			html, body { background: var(--bg) !important; color: #fff; margin: 0; }
			#gate { position: fixed; inset: 0; background: var(--bg); z-index: 10001; display: flex; flex-direction: column; align-items: center; justify-content: center; }
			#gate.hidden { display: none; }
			#pw-box { background: transparent; border: none; border-bottom: 1px solid var(--gold); color: #fff; text-align: center; font-size: 1.8rem; width: 260px; outline: none; }
			main { max-width: 800px; margin: 0 auto; padding: 150px 24px; }
			.memory-item { margin-bottom: 120px; text-align: center; }
			.memory-item img { width: 100%; max-height: 75vh; object-fit: contain; margin: 2rem 0; box-shadow: 0 30px 60px rgba(0,0,0,0.5); }
			h2, .date { font-family: 'Cinzel', serif; }
			.date { color: var(--gold); letter-spacing: 0.2em; }
			.desc { color: rgba(255,255,255,0.5); font-style: italic; }
		</style>
	</head>
	<body>
		<div id="gate">
			<p style="color: var(--gold); letter-spacing: 0.5em; font-family: Cinzel;">PASSCODE</p>
			<input type="password" id="pw-box" autofocus />
		</div>

		<Header />
		<main>
			{memories.map((post) => (
				<div class="memory-item">
					<div class="date">{post.date}</div>
					<img src={post.cover} alt={post.title} />
					<h2>{post.title}</h2>
					<p class="desc">{post.description}</p>
				</div>
			))}
		</main>
		<Footer />

		<script define:vars={{ PASSWORD }}>
			const gate = document.getElementById('gate');
			const input = document.getElementById('pw-box');
			input.addEventListener('input', (e) => {
				if (e.target.value === PASSWORD) {
					gate.classList.add('hidden');
				}
			});
		</script>
	</body>
</html>
