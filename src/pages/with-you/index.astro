---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';

// 1. 强力抓取
let moments = [];
try {
    const raw = await getCollection('with-you');
    moments = raw.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
} catch (e) {
    console.error("抓取失败:", e);
}

const PASSWORD = "0309"; 
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`With You - ${SITE_TITLE}`} />
		<style>
			:root { --gold: #d6b25e; --bg: #050505; }
			body { background: var(--bg); color: #fff; margin: 0; }
			#gate { position: fixed; inset: 0; background: var(--bg); z-index: 10001; display: flex; flex-direction: column; align-items: center; justify-content: center; }
			#gate.hidden { display: none; }
			#pw-box { background: transparent; border: none; border-bottom: 1px solid var(--gold); color: #fff; text-align: center; font-size: 1.8rem; width: 260px; outline: none; }
			main { max-width: 800px; margin: 0 auto; padding: 150px 20px; }
			.card { margin-bottom: 100px; text-align: center; }
			/* 修复裂图的关键：确保图片不溢出且路径正确 */
			.card img { width: 100%; height: auto; max-height: 70vh; object-fit: contain; margin: 2rem 0; border: 1px solid rgba(214,178,94,0.2); }
		</style>
	</head>
	<body>
		<div id="gate">
			<input type="password" id="pw-box" autofocus placeholder="PASSCODE" />
		</div>

		<Header />
		<main>
			{moments.length > 0 ? (
				moments.map((m) => (
					<div class="card">
						<div style="color:var(--gold); font-family:Cinzel;">{m.data.pubDate.toDateString()}</div>
						<img src={m.data.cover.startsWith('/') ? m.data.cover : `/${m.data.cover}`} alt={m.data.title} />
						<h2 style="font-family:Cinzel;">{m.data.title}</h2>
						<p style="opacity:0.5; font-style:italic;">{m.data.description}</p>
					</div>
				))
			) : (
				<div style="text-align:center; padding:100px; opacity:0.5;">
					<p>FOUND: {moments.length}</p>
					<p>请检查: src/content/with-you/ 是否有 .md</p>
				</div>
			)}
		</main>
		<Footer />

		<script define:vars={{ PASSWORD }}>
			document.getElementById('pw-box').addEventListener('input', (e) => {
				if (e.target.value === PASSWORD) document.getElementById('gate').classList.add('hidden');
			});
		</script>
	</body>
</html>
