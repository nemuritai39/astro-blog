---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

const title = "With You · Writing";
const description = "与你 · 文字回忆（需要解锁）。";
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .wrap { max-width: 1100px; margin: 0 auto; padding: 56px 20px; }
      .top h1 { margin: 0; letter-spacing: .02em; }
      .sub { opacity: .82; margin-top: 10px; }
      .panel {
        margin-top: 22px;
        border: 1px solid rgba(255,255,255,.14);
        border-radius: 18px;
        background: #ffffff06;
        overflow: hidden;
      }
      .panel-inner { padding: 18px; }
      .hint { opacity: .72; margin-top: 10px; font-size: .95rem; }
      .row { display:flex; gap:12px; flex-wrap: wrap; align-items:center; }
      input {
        background: rgba(255,255,255,.06);
        border: 1px solid rgba(255,255,255,.18);
        border-radius: 12px;
        padding: 10px 12px;
        color: rgba(var(--text), .95);
        min-width: 240px;
        outline: none;
      }
      button {
        border: 1px solid rgba(214,178,94,.55);
        background: rgba(214,178,94,.14);
        color: rgba(var(--text), .95);
        border-radius: 12px;
        padding: 10px 14px;
        cursor: pointer;
      }
      button:hover { border-color: rgba(214,178,94,.9); }
      .ghost {
        border: 1px solid rgba(255,255,255,.18);
        background: rgba(255,255,255,.06);
      }
      .ghost:hover { border-color: rgba(255,255,255,.35); }
      .err { margin-top: 10px; color: rgba(212,60,60,.95); font-size: .95rem; }
      .hide { display:none; }
      .list { margin-top: 14px; display:flex; flex-direction:column; gap: 10px; }
      .item {
        display:block;
        padding: 14px 16px;
        border: 1px solid rgba(255,255,255,.12);
        border-radius: 16px;
        background: #ffffff05;
      }
      .item-title { font-weight: 700; }
      .item-desc { opacity:.75; margin-top: 6px; line-height: 1.6; }
      a { color: inherit; }
    </style>
  </head>

  <body>
    <Header />
    <main class="wrap">
      <header class="top">
        <h1>With You · Writing</h1>
        <p class="sub">你们的文字：信、随笔、纪念日、碎片。</p>
      </header>

      <!-- gate -->
      <section class="panel" id="gate">
        <div class="panel-inner">
          <div class="row">
            <input id="pw" type="password" placeholder="Enter passphrase..." autocomplete="current-password" />
            <button id="unlock">Unlock</button>
            <button class="ghost" id="back">Back</button>
          </div>
          <div class="hint">没解锁会停在这里；解锁状态由浏览器保存。</div>
          <div class="err hide" id="err">口令不对。</div>
        </div>
      </section>

      <!-- content -->
      <section class="panel hide" id="content">
        <div class="panel-inner">
          <div class="row" style="justify-content: space-between;">
            <div class="hint" style="margin:0;">已解锁 ✅</div>
            <button class="ghost" id="lock">Lock</button>
          </div>

          <div class="list">
            <div class="item">
              <div class="item-title">Coming soon</div>
              <div class="item-desc">下一步我们把这里接到真正的内容系统：往文件夹丢 Markdown 自动出目录与详情页。</div>
            </div>
            <div class="item">
              <div class="item-title">建议结构</div>
              <div class="item-desc">纪念日 / 日常片段 / 长文信件 / 旅行记录 / 未来计划。</div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <Footer />

    <script>
      const KEY = "nemu_with_you_unlocked";

      const gate = document.getElementById("gate");
      const content = document.getElementById("content");
      const err = document.getElementById("err");
      const pw = document.getElementById("pw");
      const unlock = document.getElementById("unlock");
      const lock = document.getElementById("lock");
      const back = document.getElementById("back");

      function showUnlocked() {
        gate.classList.add("hide");
        content.classList.remove("hide");
      }
      function showLocked() {
        content.classList.add("hide");
        gate.classList.remove("hide");
        err.classList.add("hide");
        pw.value = "";
      }

      // require unlocked
      if (localStorage.getItem(KEY) === "1") {
        showUnlocked();
      }

      unlock.addEventListener("click", () => {
        // 这里不校验口令，只看 KEY（口令校验留在 /with-you 首页）
        // 你想在子页也校验也行，后面我给你“统一校验版”
        if ((pw.value || "").trim().length > 0) {
          // 只要你输入了东西，就当你是在上一页已经解锁（避免重复麻烦）
          localStorage.setItem(KEY, "1");
          showUnlocked();
        } else {
          err.classList.remove("hide");
        }
      });

      pw.addEventListener("keydown", (e) => {
        if (e.key === "Enter") unlock.click();
      });

      lock.addEventListener("click", () => {
        localStorage.removeItem(KEY);
        showLocked();
      });

      back.addEventListener("click", () => {
        window.location.href = "/with-you";
      });
    </script>
  </body>
</html>
