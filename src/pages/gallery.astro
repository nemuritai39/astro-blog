---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro'; // 或者你之前的 Layout

// 只抓取 gallery 文件夹里的内容
const photos = await getCollection('gallery');
---

<BaseLayout>
  <main>
    <div class="grid">
      {photos.map(photo => (
        <div class="item">
          <img src={photo.data.cover} alt={photo.data.title} />
          <p>{photo.data.title}</p>
        </div>
      ))}
    </div>
  </main>
</BaseLayout>

<style>
  /* 这里保留你之前喜欢的任何 CSS 样式 */
  .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 20px; padding: 100px 20px; }
  img { width: 100%; height: auto; display: block; }
</style>
