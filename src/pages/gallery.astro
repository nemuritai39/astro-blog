---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const photos = (await getCollection('gallery')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Gallery - ${SITE_TITLE}`} description="光影的切片" />
		<style>
			main { 
				max-width: 1400px; 
				margin: 0 auto; 
				padding: 120px 24px; 
			}

			.gallery-container {
				display: grid;
				grid-template-columns: repeat(12, 1fr);
				gap: 80px 30px;
			}

			.photo-card {
				position: relative;
				grid-column: span 12;
				transition: transform 1.2s cubic-bezier(0.16, 1, 0.3, 1);
				cursor: zoom-in;
			}

			@media (min-width: 1024px) {
				.photo-card:nth-child(4n+1) { grid-column: 2 / span 4; } 
				.photo-card:nth-child(4n+2) { grid-column: 7 / span 5; margin-top: 120px; }
				.photo-card:nth-child(4n+3) { grid-column: 1 / span 5; }
				.photo-card:nth-child(4n+4) { grid-column: 7 / span 4; margin-top: -60px; }
			}

			.image-wrapper {
				position: relative;
				overflow: hidden;
				background: #111; /* 占位背景色 */
				aspect-ratio: auto; /* 让图片决定高度 */
			}

			.photo-card img {
				width: 100%;
				height: auto;
				display: block;
				filter: grayscale(30%) brightness(0.9);
				transition: all 1.2s cubic-bezier(0.16, 1, 0.3, 1);
			}

			.photo-card:hover img {
				filter: grayscale(0%) brightness(1.05);
				transform: scale(1.02);
			}

			.photo-meta {
				margin-top: 1.2rem;
				font-family: 'Cormorant Garamond', serif;
				opacity: 0.4;
				transition: 0.5s ease;
			}

			.photo-card:hover .photo-meta { opacity: 0.9; }

			.photo-meta h3 {
				font-family: 'Cinzel', serif;
				font-size: 0.7rem;
				letter-spacing: 0.4em;
				color: var(--accent-gold);
				margin: 0;
			}

			/* 灯箱样式 */
			#lightbox {
				position: fixed;
				top: 0; left: 0; width: 100%; height: 100%;
				background: rgba(0, 0, 0, 0.98);
				display: flex; align-items: center; justify-content: center;
				z-index: 10000; opacity: 0; visibility: hidden;
				transition: 0.4s ease; cursor: zoom-out;
			}
			#lightbox.active { opacity: 1; visibility: visible; }
			#lightbox img { max-width: 90vw; max-height: 90vh; transform: scale(0.95); transition: 0.5s ease; }
			#lightbox.active img { transform: scale(1); }

			@media (max-width: 768px) {
				.gallery-container { gap: 50px; }
				.photo-card { grid-column: span 12 !important; margin-top: 0 !important; }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="gallery-container">
				{photos.map((photo) => (
					<div class="photo-card" data-full-src={photo.data.image}>
						<div class="image-wrapper">
							<img src={photo.data.image} alt={photo.data.title} loading="lazy" />
						</div>
						<div class="photo-meta">
							<h3>{photo.data.title}</h3>
						</div>
					</div>
				))}
			</div>
		</main>

		<div id="lightbox"><img src="" alt="" /></div>

		<Footer />

		<script>
			const lightbox = document.getElementById('lightbox');
			const lbImg = lightbox.querySelector('img');
			document.querySelectorAll('.photo-card').forEach(card => {
				card.addEventListener('click', () => {
					lbImg.src = card.getAttribute('data-full-src');
					lightbox.classList.add('active');
					document.body.style.overflow = 'hidden';
				});
			});
			lightbox.addEventListener('click', () => {
				lightbox.classList.remove('active');
				document.body.style.overflow = '';
			});
		</script>
	</body>
</html>
