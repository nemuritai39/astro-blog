---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

// 抓取并按时间排序
const photos = (await getCollection('gallery')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Gallery - ${SITE_TITLE}`} description="光影的切片" />
		<style>
			main { 
				max-width: 1200px; 
				margin: 0 auto; 
				padding: 120px 24px; 
			}

			.gallery-container {
				display: grid;
				grid-template-columns: repeat(12, 1fr); /* 12列栅格实现非对称 */
				gap: 60px 20px;
			}

			.photo-card {
				position: relative;
				grid-column: span 6; /* 默认占据一半 */
				transition: transform 1.2s cubic-bezier(0.16, 1, 0.3, 1);
			}

			/* 创造错落感：根据索引调整宽度和偏移 */
			.photo-card:nth-child(4n+1) { grid-column: 2 / span 4; } /* 窄图 */
			.photo-card:nth-child(4n+2) { grid-column: 7 / span 5; margin-top: 100px; } /* 宽图下移 */
			.photo-card:nth-child(4n+3) { grid-column: 1 / span 5; }
			.photo-card:nth-child(4n+4) { grid-column: 7 / span 4; margin-top: -50px; }

			.image-wrapper {
				position: relative;
				overflow: hidden;
				background: #1a1a1a;
			}

			.photo-card img {
				width: 100%;
				height: auto;
				display: block;
				filter: grayscale(40%) brightness(0.8); /* 初始低调感 */
				transition: all 1.5s cubic-bezier(0.16, 1, 0.3, 1);
			}

			.photo-card:hover img {
				filter: grayscale(0%) brightness(1);
				transform: scale(1.05);
			}

			.photo-meta {
				margin-top: 1.5rem;
				font-family: 'Cormorant Garamond', serif;
				opacity: 0;
				transform: translateY(10px);
				transition: all 0.8s ease;
			}

			.photo-card:hover .photo-meta {
				opacity: 1;
				transform: translateY(0);
			}

			.photo-meta h3 {
				font-family: 'Cinzel', serif;
				font-size: 0.8rem;
				letter-spacing: 0.3em;
				color: var(--accent-gold);
				margin: 0;
			}

			.photo-meta p {
				font-size: 0.9rem;
				font-style: italic;
				color: rgba(255, 255, 255, 0.4);
				margin-top: 5px;
			}

			@media (max-width: 768px) {
				.photo-card { grid-column: 1 / span 12 !important; margin-top: 0 !important; }
				.gallery-container { gap: 40px; }
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="gallery-container">
				{photos.map((photo) => (
					<div class="photo-card">
						<div class="image-wrapper">
							<img src={photo.data.image} alt={photo.data.title} loading="lazy" />
						</div>
						<div class="photo-meta">
							<h3>{photo.data.title}</h3>
							{photo.data.caption && <p>{photo.data.caption}</p>}
						</div>
					</div>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>
