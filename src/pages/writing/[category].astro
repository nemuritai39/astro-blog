---
import { getCollection } from 'astro:content';
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { SITE_TITLE } from '@/consts';

export async function getStaticPaths() {
	const categories = ['essays', 'thinking', 'poems', 'goals'];
	return categories.map(category => ({
		params: { category },
		props: { categoryName: category.toUpperCase() },
	}));
}

const { category } = Astro.params;
const { categoryName } = Astro.props;

// 获取该分类下的所有文章
const posts = (await getCollection(category as any)).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const colors = {
	essays: '#E2E2E2',
	poems: '#C0C0C0',
	thinking: '#D4AF37',
	goals: '#B39DDB',
};
const themeColor = colors[category as keyof typeof colors] || '#D4AF37';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${categoryName} - ${SITE_TITLE}`} description={`Archives of ${category}`} />
		<style define:vars={{ themeColor }}>
			main { max-width: 800px; margin: 0 auto; padding: 80px 24px; min-height: 70vh; }
			.category-title { font-family: 'Cinzel', serif; font-size: 0.8rem; letter-spacing: 0.5em; color: var(--themeColor); margin-bottom: 60px; text-align: center; opacity: 0.8; }
			.post-list { list-style: none; padding: 0; }
			.post-item { margin-bottom: 40px; }
			.post-link { text-decoration: none; display: flex; align-items: baseline; gap: 20px; }
			.post-link h2 { font-family: 'EB Garamond', serif; font-size: 1.6rem; color: #fff; margin: 0; transition: color 0.3s ease; font-weight: 400; }
			.post-link:hover h2 { color: var(--themeColor); }
			.post-meta { font-family: 'Cormorant Garamond', serif; font-size: 0.9rem; color: rgba(255, 255, 255, 0.3); white-space: nowrap; }
			.post-desc { font-family: 'Noto Serif SC', serif; font-size: 0.9rem; color: rgba(255, 255, 255, 0.5); }
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="category-title">CHAPTER // {categoryName}</div>
			<ul class="post-list">
				{posts.map((post) => {
					const cleanSlug = post.id.replace(/\.[^/.]+$/, "");
					return (
						<li class="post-item">
							<a href={`/writing/${category}/${cleanSlug}`} class="post-link">
								<h2 class="post-title">{post.data.title}</h2>
								<span class="post-meta">{post.data.pubDate.toLocaleDateString('en-us', {
									year: 'numeric', month: 'short', day: 'numeric',
								})}</span>
								{post.data.description && <span class="post-desc">— {post.data.description}</span>}
							</a>
						</li>
					);
				})}
			</ul>
		</main>
		<Footer />
	</body>
</html>
