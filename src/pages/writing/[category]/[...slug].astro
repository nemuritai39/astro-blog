---
import { getCollection, render } from 'astro:content';
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

export async function getStaticPaths() {
	const categories = ['essays', 'thinking', 'poems', 'goals'];
	const allPaths = await Promise.all(
		categories.map(async (cat) => {
			const posts = await getCollection(cat as any);
			return posts.map(post => ({
				params: { 
					category: cat,
					// 使用 replace 确保 slug 不带后缀名，解决 404 隐患
					slug: post.id.replace(/\.[^/.]+$/, "") 
				},
				props: { post },
			}));
		})
	);
	return allPaths.flat();
}

const { post } = Astro.props;
const { category } = Astro.params;
const { Content } = await render(post);

const themes = {
	essays: { color: 'var(--ivory)', name: '随笔' },
	poems: { color: 'var(--silver)', name: '诗歌' },
	thinking: { color: 'var(--accent-gold)', name: '思考' },
	goals: { color: '#b39ddb', name: '目标' },
};
const currentTheme = themes[category as keyof typeof themes] || themes.essays;
---

<html lang="en">
	<head>
		<BaseHead title={post.data.title} description={post.data.description} />
		<style define:vars={{ themeColor: currentTheme.color }}>
			#progress-bar { 
				position: fixed; top: 0; left: 0; 
				width: 0%; height: 2px; 
				background: var(--themeColor); 
				z-index: 10000; 
				transition: width 0.1s ease;
			}

			main { 
				max-width: 750px; 
				margin: 0 auto; 
				padding: 100px 24px; 
			}

			.article-header { text-align: center; margin-bottom: 5em; }
			
			.category-tag { 
				font-family: 'Cinzel', serif; 
				font-size: 0.7rem; 
				letter-spacing: 0.5em; 
				color: var(--themeColor); 
				opacity: 0.6;
				text-transform: uppercase;
				display: block;
				margin-bottom: 2em;
			}

			.article-header h1 { 
				font-family: 'Cinzel', serif; 
				font-size: clamp(1.8rem, 5vw, 2.4rem); 
				color: #fff; 
				font-weight: 400;
				line-height: 1.3;
			}

			/* 基础排版 */
			.prose { 
				font-family: 'EB Garamond', 'Noto Serif SC', serif; 
				font-size: 1.2rem; 
				line-height: 1.8; 
				color: rgba(255, 255, 255, 0.8); 
			}

			/* --- 诗歌模式：核心修正 --- */
			.is-poems { 
				display: flex;
				flex-direction: column;
				align-items: center; /* 容器居中 */
				text-align: left;
			}

			.is-poems :global(p) { 
				width: fit-content; /* 宽度随文字走 */
				min-width: 260px;   /* 设定一个最小宽度，保证视觉平衡 */
				margin-bottom: 1.2rem;
				text-align: left; /* 内部文字齐头 */
				letter-spacing: 0.1em;
			}

			/* 诗歌的小节空行 */
			.is-poems :global(p:empty) { height: 2.5em; }

			/* 非诗歌：保持首字下沉和两端对齐 */
			.prose:not(.is-poems) { text-align: justify; }
			.prose:not(.is-poems) :global(p:first-of-type::first-letter) {
				font-family: 'Cinzel', serif;
				font-size: 3rem;
				float: left;
				line-height: 1;
				padding-right: 10px;
				color: var(--themeColor);
			}

			.post-footer {
				margin-top: 8em;
				padding-top: 3em;
				border-top: 1px solid rgba(255, 255, 255, 0.05);
				text-align: center;
			}

			.back-link {
				font-family: 'Cinzel', serif;
				font-size: 0.8rem;
				color: #fff;
				text-decoration: none;
				letter-spacing: 0.3em;
				opacity: 0.4;
				transition: 0.3s;
			}

			.back-link:hover { opacity: 1; color: var(--themeColor); }

			@media (max-width: 720px) {
				main { padding: 60px 20px; }
				.is-poems { align-items: flex-start; padding-left: 5%; }
				.is-poems :global(p) { min-width: auto; width: 100%; }
			}
		</style>
	</head>
	<body>
		<div id="progress-bar"></div>
		<Header />
		<main>
			<article>
				<header class="article-header">
					<span class="category-tag">// {currentTheme.name}</span>
					<h1>{post.data.title}</h1>
				</header>
				<div class={`prose ${category === 'poems' ? 'is-poems' : ''}`}>
					<Content />
				</div>
			</article>
			<footer class="post-footer">
				<a href={`/writing/${category}`} class="back-link">← RETURN</a>
			</footer>
		</main>
		<script>
			const bar = document.getElementById("progress-bar");
			window.onscroll = () => {
				const h = document.documentElement;
				const st = h.scrollTop || document.body.scrollTop;
				const sh = h.scrollHeight || document.body.scrollHeight;
				const pct = (st / (sh - h.clientHeight)) * 100;
				if (bar) bar.style.width = pct + "%";
			};
		</script>
		<Footer />
	</body>
</html>
