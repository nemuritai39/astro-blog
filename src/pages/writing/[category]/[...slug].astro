---
import { getCollection, render } from 'astro:content';
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

// 1. 核心逻辑：定义哪些文件夹的内容可以进入这个房间
export async function getStaticPaths() {
	const categories = ['essays', 'thinking', 'poems', 'goals'];
	const allPaths = await Promise.all(
		categories.map(async (cat) => {
			const posts = await getCollection(cat as any);
			return posts.map(post => ({
				params: { 
					category: cat,    // 对应目录名
					slug: post.id     // 对应文件名
				},
				props: { post },
			}));
		})
	);
	return allPaths.flat();
}

const { post } = Astro.props;
const { category } = Astro.params;
const { Content } = await render(post);

// 2. 视觉主题配置：根据分类自动切换点缀色
const themes = {
	essays: { color: 'var(--ivory)', name: '随笔' },
	poems: { color: 'var(--silver)', name: '诗歌' },
	thinking: { color: 'var(--accent-gold)', name: '思考' },
	goals: { color: '#b39ddb', name: '目标' },
};
const currentTheme = themes[category as keyof typeof themes] || themes.essays;
---

<html lang="en">
	<head>
		<BaseHead title={post.data.title} description={post.data.description} />
		<style define:vars={{ themeColor: currentTheme.color }}>
			/* 顶部进度条：随分类变色 */
			#progress-bar { 
				position: fixed; top: 0; left: 0; 
				width: 0%; height: 2px; 
				background: var(--themeColor); 
				z-index: 10000; 
				transition: width 0.1s ease;
			}

			main { max-width: 700px; margin: 0 auto; padding: 80px 24px; }

			.article-header { text-align: center; margin-bottom: 5em; }
			.category-tag { 
				font-family: 'Cinzel', serif; 
				font-size: 0.7rem; 
				letter-spacing: 0.4em; 
				color: var(--themeColor); 
				margin-bottom: 1.5em; 
				display: block;
				opacity: 0.6;
			}
			.article-header h1 { 
				font-family: 'Cinzel', serif; 
				font-size: clamp(1.8rem, 5vw, 2.4rem); 
				color: var(--ivory); 
				line-height: 1.3;
			}

			/* 正文排版 */
			.prose { 
				font-family: 'EB Garamond', serif; 
				font-size: 1.25rem; 
				line-height: 1.85; 
				color: rgba(255, 255, 255, 0.85); 
			}

			/* --- 智能首字下沉：诗歌分类自动禁用 --- */
			.prose:not(.is-poems) :global(p:first-of-type::first-letter) {
				font-family: 'Cinzel', serif;
				font-size: 1.8rem;
				font-weight: 700;
				color: var(--themeColor);
				margin-right: 0.1em;
				float: none;
				vertical-align: baseline;
			}

			/* 诗歌模式：居中且更具空气感 */
			.is-poems { 
				text-align: center; 
				letter-spacing: 0.05em;
			}
			.is-poems :global(p) { margin-bottom: 2em; }

			/* 素雅引文 */
			.prose :global(blockquote) {
				margin: 3em 0;
				padding: 0.5em 1.5em;
				border-left: 1px solid var(--themeColor);
				opacity: 0.8;
				font-style: italic;
				color: var(--themeColor);
			}

			@media (max-width: 720px) {
				main { padding: 60px 20px; }
				.article-header { margin-bottom: 3em; }
			}
		</style>
	</head>
	<body>
		<div id="progress-bar"></div>
		<Header />
		<main>
			<article>
				<header class="article-header">
					<span class="category-tag">// {currentTheme.name}</span>
					<h1>{post.data.title}</h1>
				</header>
				<div class={`prose ${category === 'poems' ? 'is-poems' : ''}`}>
					<Content />
				</div>
			</article>
		</main>
		<script>
			const updateProgress = () => {
				const winScroll = document.documentElement.scrollTop;
				const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
				const scrolled = (winScroll / height) * 100;
				const bar = document.getElementById("progress-bar");
				if (bar) bar.style.width = scrolled + "%";
			};
			window.addEventListener('scroll', updateProgress);
		</script>
		<Footer />
	</body>
</html>
