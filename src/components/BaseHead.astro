---
// 定义 Props 类型，增加可选性以防报错
interface Props {
  title?: string;
  description?: string;
  canonicalURL?: string | URL;
}

// 设定默认值，确保即便父组件没传值，页面也不会崩溃
const {
  title = "nemu · archive",
  description = "nemu · archive",
  canonicalURL = Astro.url,
} = Astro.props;

// 确保 canonicalURL 始终是字符串格式
const canonicalURLString = new URL(canonicalURL, Astro.site).toString();
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" href="/favicon.ico" />
<meta name="generator" content={Astro.generator} />

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link
  href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Cormorant+Garamond:wght@400;500;600;700&family=Grenze+Gotisch:wght@600;700&family=Inter:wght@400;500;600&family=Noto+Serif+SC:wght@400;500;600;700&display=swap"
  rel="stylesheet"
/>

<link rel="stylesheet" href="/global.css" />

<link rel="canonical" href={canonicalURLString} />

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURLString} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURLString} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
