---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="nav-container">
			<div class="logo">
				<a href="/">{SITE_TITLE}</a>
			</div>
			<div class="internal-links">
				<HeaderLink href="/">Index</HeaderLink>
				<HeaderLink href="/writing">Writing</HeaderLink>
				<HeaderLink href="/gallery">Gallery</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		position: fixed;
		top: 0;
		width: 100%;
		z-index: 1000;
		transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
		padding: 30px 0; /* 初始间距 */
	}

	/* 滚动后的状态由 JS 控制添加 .scrolled 类 */
	header.scrolled {
		padding: 15px 0;
		background: rgba(0, 0, 0, 0.6);
		backdrop-filter: blur(12px); /* 毛玻璃效果 */
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
	}

	nav {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 40px;
	}

	.nav-container {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.logo a {
		font-family: 'Cinzel', serif;
		font-size: 1.1rem;
		font-weight: 700;
		color: var(--ivory);
		text-decoration: none;
		letter-spacing: 0.2em;
		transition: opacity 0.3s ease;
	}

	.logo a:hover {
		opacity: 0.7;
	}

	.internal-links {
		display: flex;
		gap: 3rem;
	}

	/* 针对 HeaderLink 的样式增强 */
	.internal-links :global(a) {
		font-family: 'Cinzel', serif;
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.3em;
		color: var(--ivory);
		text-decoration: none;
		opacity: 0.4;
		padding: 10px 0;
		position: relative;
		transition: all 0.4s ease;
	}

	.internal-links :global(a:hover),
	.internal-links :global(a.active) {
		opacity: 1;
		color: var(--accent-gold);
	}

	/* 极简下划线动画 */
	.internal-links :global(a::after) {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 0;
		height: 1px;
		background: var(--accent-gold);
		transition: width 0.4s ease;
	}

	.internal-links :global(a:hover::after),
	.internal-links :global(a.active::after) {
		width: 100%;
	}

	@media (max-width: 720px) {
		header { padding: 20px 0; }
		.internal-links { gap: 1.5rem; }
		.logo { display: none; } /* 移动端隐藏 Logo 以腾出空间 */
		.internal-links { width: 100%; justify-content: center; }
	}
</style>

<script>
	const header = document.querySelector('header');
	window.addEventListener('scroll', () => {
		if (window.scrollY > 50) {
			header?.classList.add('scrolled');
		} else {
			header?.classList.remove('scrolled');
		}
	});
</script>
