---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header id="main-header">
	<nav>
		<div class="nav-container">
			<div class="logo">
				<a href="/">{SITE_TITLE}</a>
			</div>
			<div class="internal-links">
				<HeaderLink href="/">Index</HeaderLink>
				<HeaderLink href="/writing">Writing</HeaderLink>
				<HeaderLink href="/gallery">Gallery</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		z-index: 1000;
		/* 初始状态：半透明深色，带有一条极细的底线 */
		background: rgba(0, 0, 0, 0.2);
		backdrop-filter: blur(0px);
		border-bottom: 1px solid rgba(255, 255, 255, 0);
		transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
		padding: 40px 0;
	}

	/* 滚动后的“凝固”状态 */
	header.scrolled {
		padding: 18px 0;
		background: rgba(10, 10, 10, 0.8);
		backdrop-filter: blur(20px);
		border-bottom: 1px solid rgba(214, 178, 94, 0.2); /* 淡淡的金边 */
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
	}

	nav {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 30px;
	}

	.nav-container {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.logo a {
		font-family: 'Cinzel', serif;
		font-size: 0.9rem;
		font-weight: 700;
		color: #fff;
		text-decoration: none;
		letter-spacing: 0.3em;
		text-transform: uppercase;
		opacity: 0.9;
	}

	.internal-links {
		display: flex;
		gap: 3.5rem;
	}

	/* 导航链接：确保可见度 */
	.internal-links :global(a) {
		font-family: 'Cinzel', serif;
		font-size: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.2em;
		color: rgba(255, 255, 255, 0.6); /* 初始灰色 */
		text-decoration: none;
		position: relative;
		transition: all 0.3s ease;
		padding: 5px 0;
	}

	/* 悬停和激活状态 */
	.internal-links :global(a:hover),
	.internal-links :global(a.active) {
		color: var(--accent-gold, #d6b25e);
		opacity: 1;
	}

	/* 激活状态的小原点（比下划线更显灵性） */
	.internal-links :global(a.active::after) {
		content: '';
		position: absolute;
		bottom: -8px;
		left: 50%;
		transform: translateX(-50%);
		width: 4px;
		height: 4px;
		background: var(--accent-gold, #d6b25e);
		border-radius: 50%;
		box-shadow: 0 0 10px var(--accent-gold);
	}

	@media (max-width: 768px) {
		header { padding: 25px 0; }
		.logo { display: none; }
		.internal-links { width: 100%; justify-content: space-around; gap: 0; }
	}
</style>

<script>
	// 确保在 Astro 页面切换时也能重新执行
	const initHeader = () => {
		const header = document.getElementById('main-header');
		const handleScroll = () => {
			if (window.scrollY > 20) {
				header?.classList.add('scrolled');
			} else {
				header?.classList.remove('scrolled');
			}
		};
		window.addEventListener('scroll', handleScroll);
		// 初始执行一次
		handleScroll();
	};

	initHeader();
	// 针对 Astro 的视图过渡（如果开启了的话）
	document.addEventListener('astro:after-swap', initHeader);
</script>
